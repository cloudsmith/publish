<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
       point="org.eclipse.ui.commands">
    <command
          description="Runs Create Repository"
          id="com.cloudsmith.publish.ui.execute"
          name="Run Create Repository">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="com.cloudsmith.publish.ui.commands.ExecuteHandler"
          commandId="com.cloudsmith.publish.ui.execute">
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
       <command
             commandId="com.cloudsmith.publish.ui.execute"
             label="Run Create Repository"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <iterate>
                <adapt
                      type="org.eclipse.b3.build.BeeModel">
                </adapt>
             </iterate>
          </visibleWhen>
       </command>
    </menuContribution>
 </extension>

</plugin>
