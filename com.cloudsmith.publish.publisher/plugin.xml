<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.cloudsmith.publish.publisher.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.cloudsmith.publish.publisher.Perspective"
            id="com.cloudsmith.publish.publisher.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="publisher.file"
               label="File">
            <command
                  commandId="publisher.newb3File"
                  label="New">
            </command>
            <command
                  commandId="publisher.openb3Files"
                  label="Open...">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator01"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  label="Close">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  label="Close All"
                  style="push">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator02"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="Save As...">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All">
            </command>
            <command
                  commandId="org.eclipse.ui.file.revert"
                  label="Revert">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator03"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.b3.ui.run.b3cmd"
                  label="Publish">
               <parameter
                     name="org.eclipse.b3.ui.run.b3cmd.pathParameter"
                     value="b3:/com.cloudsmith.publish/src-b3/CreateReposCmd.b3">
               </parameter>
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator04"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               id="publisher.edit"
               label="Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="Undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="Redo"
                  style="push">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator01"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Coopy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator02"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.selectAll"
                  label="Select All"
                  style="push">
            </command>
            <separator
                  name="com.cloudsmith.publish.publisher.separator03"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.findReplace"
                  label="Find/Replace..."
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.findNext"
                  label="Find Next"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.findPrevious"
                  label="FindPrevious"
                  style="push">
            </command>
         </menu>
         <command
               commandId="publisher.preferences"
               label="Preferences"
               style="push">
         </command>
         <menu
               id="publisher.help"
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="publisher.toolbar"
               label="File">
            <command
                  commandId="publisher.newb3File"
                  icon="icons/new.gif"
                  label="New"
                  style="push">
            </command>
            <command
                  commandId="publisher.openb3Files"
                  icon="icons/open.gif"
                  label="Open..."
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.b3.ui.run.b3cmd"
                  icon="icons/publish.gif"
                  label="Publish"
                  style="push">
               <parameter
                     name="org.eclipse.b3.ui.run.b3cmd.pathParameter"
                     value="b3:/com.cloudsmith.publish/src-b3/CreateReposCmd.b3">
               </parameter>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
      <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="false">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.cloudsmith.publish.publisher.application" name="Cloudsmith^Publisher"
            >
         <property
               name="appName" value="Cloudsmith^Publisher">
         </property>
         <property
               name="aboutText"
               value="Cloudsmith^Publisher (c) 2010">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="publisher.disable.actions"
            name="Actions to disable">
         <enabledWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="non.existent.editor">
               </equals>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="publisher.disable.actions"
            pattern="org\.eclipse\.search.*|org\.eclipse\.ui\.edit\.text\.gotoLastEditPosition|org\.eclipse\.ui\.edit.*Annotation.*|.*org\.eclipse\.team\.ui\.applyPatch|.*org\.eclipse\.team\.ui\.showLocalHistory|.*org\.eclipse\.team\.ui\.ConfigureProject|.*OpenDeclaration.*|org\.eclipse\.ui\.navigate.*">
      </activityPatternBinding>
   </extension>
   
      <extension
         point="org.eclipse.ui.actionSets">
        <actionSet
            label="b3 Files"
            visible="true"
            id="com.cloudsmith.publish.publisher.actionSet.b3Files">
           <action
                 class="com.cloudsmith.publish.publisher.actions.Newb3FileAction"
                 definitionId="publisher.newb3File"
                 id="com.cloudsmith.publish.publisher.newb3File"
                 label="New b3 file"
                 style="push">
           </action>
         <action
               definitionId="publisher.openb3Files"
               label="Open b3 Files"
               class="com.cloudsmith.publish.publisher.actions.OpenLocalb3FileAction"
               id="com.cloudsmith.publish.publisher.openb3Files">
         </action>
      </actionSet>
   </extension>
      <extension
            point="org.eclipse.ui.commands">
         <command
               defaultHandler="com.cloudsmith.publish.publisher.actions.ShowReducedPreferencePageHandler"
               id="publisher.preferences"
               name="Preferences">
         </command>
      </extension>   
   

</plugin>
