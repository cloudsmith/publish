<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.cloudsmith.publish.publisher.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.cloudsmith.publish.publisher.Perspective"
            id="com.cloudsmith.publish.publisher.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:publisher.file?after=additions">
         <command
               commandId="org.eclipse.b3.ui.run.b3cmd"
               icon="icons/publish.gif"
               label="Publish"
               style="push">
            <parameter
                  name="org.eclipse.b3.ui.run.b3cmd.pathParameter"
                  value="b3:/com.cloudsmith.publish/src-b3/CreateReposCmd.b3">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:publisher.toolbar?after=additions">
         <command
               commandId="org.eclipse.b3.ui.run.b3cmd"
               icon="icons/publish.gif"
               label="Publish"
               style="push">
            <parameter
                  name="org.eclipse.b3.ui.run.b3cmd.pathParameter"
                  value="b3:/com.cloudsmith.publish/src-b3/CreateReposCmd.b3">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:publisher.help?after=additions">
         <command
               commandId="org.eclipse.ui.cheatsheets.openCheatSheet"
               label="Open a Cheat Sheet..."
               style="push">
         </command>
      </menuContribution>
   </extension>
   
      <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.75"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="false">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.cloudsmith.publish.publisher.application" name="Cloudsmith Publisher"
            >
         <property
               name="appName" value="Cloudsmith Publisher">
         </property>
         <property
               name="startupForegroundColor"
               value="CCCCCC">
         </property>
         <property
               name="startupMessageRect"
               value="7,130,330,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,150,330,10">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="publisher.disable.actions"
            name="Actions to disable">
         <enabledWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="non.existent.editor">
               </equals>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding
            activityId="publisher.disable.actions"
            pattern="org\.eclipse\.search.*|org\.eclipse\.ui\.edit\.text\.gotoLastEditPosition|org\.eclipse\.ui\.edit.*Annotation.*|.*org\.eclipse\.team\.ui\.applyPatch|.*org\.eclipse\.team\.ui\.showLocalHistory|.*org\.eclipse\.team\.ui\.ConfigureProject|.*OpenDeclaration.*|org\.eclipse\.ui\.navigate.*">
      </activityPatternBinding>
   </extension>
   
   

</plugin>
